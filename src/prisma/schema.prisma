generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Use {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String
  imageURL String?
  role     Role    @default(member)
  position String?
  phoneNumber String?
  createdAt DateTime @default(now())
}


enum Role {
  member
  manager
  admin
}